<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TextCommunicator</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="container row">
            <div class="brand">
                <a asp-controller="Chat" asp-action="Index">TextCommunicator</a>
            </div>

            <nav class="nav">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-controller="Chat" asp-action="Index">Czat</a>
                    <a asp-controller="Groups" asp-action="Index">Grupy</a>
                    <a asp-controller="Profile" asp-action="Edit">Profil</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Users">UÅ¼ytkownicy</a>
                        <a asp-controller="Groups" asp-action="AllGroups">Wszystkie grupy</a>
                        
                    }
                }
            </nav>

            <div class="auth">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <span class="muted">@User.Identity!.Name</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        <button class="btn btn-secondary" type="submit">Wyloguj</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Zaloguj</a>
                    <a class="btn" asp-controller="Account" asp-action="Register">Rejestracja</a>
                }
            </div>
        </div>
    </header>

    <main class="container">
        @if (TempData["Err"] is not null)
        {
            <div class="alert">@TempData["Err"]</div>
        }
        @RenderBody()
    </main>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
