@model List<TextCommunicator.Controllers.AdminController.UserRowVm>
@{
    ViewData["Title"] = "Użytkownicy";
}

<div class="card">
    <h2>Użytkownicy (Admin)</h2>

    <div class="form-group">
        <input id="searchUsersAdmin" class="form-control" placeholder="Szukaj..." autocomplete="off" />
    </div>


    @if (TempData["Err"] is not null)
    {
        <div class="alert">@TempData["Err"]</div>
    }

    <ul class="list" id="listUsersAdmin">
        @foreach (var u in Model)
        {
            <li class="list-item">
                <span>
            @u.Email
            @if (u.IsAdmin)
            {
                <span class="badge">ADMIN</span>
            }
        </span>
        <div class="row gap">
            <a class="btn btn-secondary" asp-controller="Profile" asp-action="Edit" asp-route-id="@u.Id">Edytuj profil</a>
                    <form asp-action="ToggleAdmin" method="post" class="inline">
                <input type="hidden" name="id" value="@u.Id" />
                <button class="btn btn-secondary" type="submit">
                    @(u.IsAdmin ? "Zabierz admina" : "Nadaj admina")
                </button>
            </form>
            <form asp-action="DeleteUser" method="post" class="inline">
                    <input type="hidden" name="id" value="@u.Id" />
                    <button class="btn btn-danger" type="submit">Usuń</button>
                </form>
            </li>
        }
    </ul>
</div>


@section Scripts {
    <script>
        tcWireSearch("searchUsersAdmin", "#listUsersAdmin", ".list-item", "span");
    </script>
}
