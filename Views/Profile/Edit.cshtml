@model TextCommunicator.Models.ProfileEditModel
@{
    ViewData["Title"] = "Profil";
    var isAdminEditingOther = User.IsInRole("Admin") && Model.UserId != (User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "");
}

<div class="card">
    <div class="row space-between">
        <h2>Profil @(isAdminEditingOther ? "(edycja użytkownika)" : "")</h2>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-secondary" asp-controller="Admin" asp-action="Users">← Użytkownicy</a>
        }
    </div>

    @if (TempData["Ok"] is not null)
    {
        <div class="alert ok">@TempData["Ok"]</div>
    }

    <div class="row gap" style="margin: 10px 0 14px 0;">
        <div style="width:96px;">
            @if (!string.IsNullOrWhiteSpace(Model.CurrentPhotoPath))
            {
                <img class="avatar" src="@Model.CurrentPhotoPath" alt="avatar" />
            }
            else
            {
                <div class="avatar placeholder">?</div>
            }
        </div>
        <div>
            <div class="muted small">Email</div>
            <div><b>@Model.Email</b></div>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Photo"></label>
            <input asp-for="Photo" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
            <span asp-validation-for="Photo" class="text-danger"></span>
            <div class="muted small">Dozwolone: JPG/PNG/WEBP, max 2MB.</div>
        </div>

        <div class="row gap">
            <button class="btn" type="submit">Zapisz</button>
            <a class="btn btn-secondary" asp-controller="Chat" asp-action="Index">Strona główna</a>
        </div>

        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}